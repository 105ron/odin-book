<br>
<table style="width:80%">
  <tr>
    <th>Poster</th>
    <th>Comment</th>
  </tr>
  <% p.comments.each do |comment| %>
    <tr>
      <td><%= "#{comment.user.first_name} #{comment.user.last_name}" %></td>
      <td><%= comment.content %>
      <p>Posted <%= time_ago_in_words(comment.created_at) %> ago.</p>
      </td>
    </tr>
  <% end %>
</table>